<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnHandler"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Hander post"/>

    <Button
        android:id="@+id/btnHandlerImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text=" By hander post get Images"/>

    <Button
        android:id="@+id/btnHandlerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Handler And Messages"/>

</LinearLayout>
