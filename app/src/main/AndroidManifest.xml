<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lzb.ormlitedemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".handler.HandlerPostActivity"
            android:label="@string/title_activity_handler_post" />
        <activity
            android:name=".handler.HandlerPostGetImageActivity"
            android:label="@string/title_activity_main2" />
        <activity
            android:name=".handler.HandlerMessageActivity"
            android:label="@string/title_activity_handler_message"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
